# Variables d'environnement pour le projet Django
# Copiez ce fichier vers .env et remplissez vos propres valeurs

# Base de données PostgreSQL
DB_NAME=postgresSQL_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Clé secrète Django (générez votre propre clé)
SECRET_KEY=your-secret-key-here

# Configuration OpenAI (obtenez votre clé sur https://platform.openai.com/)
OPENAI_API_KEY=your-openai-api-key-here

# Configuration de développement
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
